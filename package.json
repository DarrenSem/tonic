{
  "name": "@conductorlab/tonic",
  "version": "9.0.0",
  "description": "A composable component inspired by React.",
  "main": "events.js",
  "scripts": {
    "test": "npm run minify && npm run test:browser && npm run test:browser:min",
    "test:browser": "browserify --bare ./test | tape-run --node",
    "test:browser:min": "MIN=true browserify --bare ./test | tape-run --node",
    "test:perf": "browserify --bare ./test/perf.js | tape-run",
    "build:demo": "browserify --bare ./demo > ./docs/bundle.js",
    "minify": "uglifyjs index.js -c unused,dead_code,hoist_vars,loops=false,ecma=7,hoist_props=true,hoist_funs,toplevel,keep_classnames,keep_fargs=false -o dist/tonic.min.js"
  },
  "author": "heapwolf",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^16.2.2",
    "tape": "^4.9.1",
    "tape-run": "^4.0.0",
    "uglify-es": "^3.3.9",
    "benchmark": "^2.1.4"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hxoht/tonic.git"
  },
  "bugs": {
    "url": "https://github.com/hxoht/tonic/issues"
  },
  "homepage": "https://github.com/hxoht/tonic#readme"
}
