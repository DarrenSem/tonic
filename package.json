{
  "name": "@socketsupply/tonic",
  "version": "14.3.0",
  "description": "A component framework.",
  "scripts": {
    "ci:test:tape-run": "esbuild --bundle test/index.js | tape-run",
    "lint": "standard src/index.js",
    "test": "npm run build && standard && esbuild --bundle test/index.js | tape-run",
    "test:open": "npm run build && esbuild --bundle test/index.js | tape-run --browser chrome --keep-open",
    "build": "esbuild src/index.js --define:VERSION=\\\"$npm_package_version\\\" --outfile=index.js ",
    "pub": "npm run test && npm publish --registry=https://registry.npmjs.org && npm publish --registry https://npm.pkg.github.com"
  },
  "main": "index.js",
  "type": "module",
  "author": "socketsupply",
  "license": "MIT",
  "devDependencies": {
    "benchmark": "^2.1.4",
    "esbuild": "^0.15.5",
    "standard": "17.0.0",
    "tape-run": "^10.0.0",
    "tapzero": "0.6.1",
    "uuid": "8.3.2"
  },
  "standard": {
    "ignore": [
      "index.js",
      "test/fixtures/*"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/socketsupply/tonic.git"
  },
  "bugs": {
    "url": "https://github.com/socketsupply/tonic/issues"
  },
  "homepage": "https://tonicframework.dev",
  "dependencies": {}
}
